---
import FeatureCard from './FeatureCard.astro';

const features = [
	{
		icon: '🔍',
		title: 'Metabúsqueda Inteligente',
		description: 'Basado en searXNG, agregamos resultados de múltiples motores de búsqueda para ofrecerte siempre la mejor información.'
	},
	{
		icon: '🔐',
		title: 'Privacidad Total',
		description: 'Sin rastreo, sin cookies, sin perfiles. Tus búsquedas son tuyas y solo tuyas. No guardamos historial ni compartimos datos.'
	},
	{
		icon: '🤖',
		title: 'Inteligencia Artificial',
		description: 'Busca directamente con la IA de Microsoft: Copilot.'
	},
	{
		icon: '📰',
		title: 'Noticias Integradas',
		description: 'Mantente informado con las últimas noticias de los mejores periódicos de España'
	},
	{
		icon: '🇪🇸',
		title: 'Made in España',
		description: 'Un buscador diseñado para los españoles, sin anuncios, con privacidad.'
	},
	{
		icon: '⚡',
		title: 'Independiente',
		description: 'Start no pertenece a ninguna gran corporación, solo a Inled Group.'
	}
];
---

<section id="features" class="features">
	<div class="container">
		<h2 class="section-title">¿Por qué elegir Start?</h2>
		<div class="features-grid">
			{features.map((feature) => (
				<FeatureCard
					icon={feature.icon}
					title={feature.title}
					description={feature.description}
				/>
			))}
		</div>
	</div>
</section>

<style>
	.container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 2rem;
	}

	@keyframes fluidGradient {
		0% {
			background-position: 0% 50%;
		}
		50% {
			background-position: 100% 50%;
		}
		100% {
			background-position: 0% 50%;
		}
	}

	.features {
		padding: 6rem 0;
		position: relative;
		overflow: hidden;
	}

	.features::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: linear-gradient(-45deg, #ffffff, #fafafa, #f0f0f0, #ffffff);
		background-size: 400% 400%;
		animation: fluidGradient 20s ease infinite;
		z-index: -1;
	}

	.dark .features::before {
		background: linear-gradient(-45deg, #000000, #050505, #0f0f0f, #000000);
		background-size: 400% 400%;
		animation: fluidGradient 20s ease infinite;
	}

	.section-title {
		text-align: center;
		font-size: 2.5rem;
		margin-bottom: 4rem;
		position: relative;
		z-index: 1;
	}

	.features-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 2rem;
		position: relative;
		z-index: 1;
	}
</style>
